{
    "compilerOptions": {
        "target": "es6",
        "module": "es6",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "useDefineForClassFields": true,
        "allowJs": true,
        "sourceMap": true,
        "jsx": "react-jsx",
        "jsxImportSource": "dom-renderer",
        "lib": ["ES2020", "DOM"]
    },
    "include": ["src/**/*", "*.js", "*.ts"]
}
