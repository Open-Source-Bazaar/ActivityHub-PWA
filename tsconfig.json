{
    "compilerOptions": {
        "target": "es6",
        "module": "ES2020",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "useDefineForClassFields": true,
        "sourceMap": true,
        "jsx": "react-jsx",
        "jsxImportSource": "dom-renderer",
        "lib": ["ES2020", "DOM"],
        "skipLibCheck": true
    },
    "include": ["src/**/*", "*.ts"]
}
