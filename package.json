{
    "name": "@kaiyuanshe/pwa",
    "version": "0.8.0",
    "description": "PWA of KaiYuanShe",
    "keywords": [
        "web-component",
        "typescript",
        "jsx",
        "web-cell"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/kaiyuanshe/PWA.git"
    },
    "bugs": {
        "url": "https://github.com/kaiyuanshe/PWA/issues"
    },
    "dependencies": {
        "@nuintun/qrcode": "^5.0.2",
        "array-unique-proposal": "^0.3.4",
        "boot-cell": "^2.0.0-rc.18",
        "browser-unhandled-rejection": "^1.0.2",
        "cell-router": "^4.0.1",
        "classnames": "^2.5.1",
        "dom-renderer": "^2.6.2",
        "koajax": "^3.1.2",
        "lodash.debounce": "^4.0.8",
        "marked": "^15.0.12",
        "mobx": "^6.13.7",
        "mobx-restful": "^2.1.0",
        "mobx-strapi": "^0.6.0",
        "web-cell": "^3.1.0",
        "web-utility": "^4.4.3"
    },
    "devDependencies": {
        "@cspell/eslint-plugin": "^9.1.1",
        "@eslint/js": "^9.29.0",
        "@html-eslint/eslint-plugin": "^0.41.0",
        "@kaiyuanshe/data-server": "^1.0.0",
        "@parcel/transformer-webmanifest": "2.15.2",
        "@stylistic/eslint-plugin": "^4.4.1",
        "@types/lodash.debounce": "^4.0.9",
        "@types/node": "^22.15.32",
        "eslint": "^9.29.0",
        "eslint-config-prettier": "^10.1.5",
        "eslint-plugin-react": "^7.37.5",
        "eslint-plugin-simple-import-sort": "^12.1.1",
        "globals": "^16.2.0",
        "husky": "^9.1.7",
        "jiti": "^2.4.2",
        "lint-staged": "^16.1.2",
        "parcel": "^2.15.2",
        "postcss": "^8.5.6",
        "prettier": "^3.5.3",
        "prettier-plugin-css-order": "^2.1.2",
        "typescript": "~5.8.3",
        "typescript-eslint": "^8.34.1",
        "workbox-cli": "^7.3.0"
    },
    "pnpm": {
        "onlyBuiltDependencies": [
            "@parcel/watcher",
            "@swc/core",
            "core-js",
            "lmdb",
            "msgpackr-extract"
        ]
    },
    "prettier": {
        "singleQuote": true,
        "trailingComma": "none",
        "arrowParens": "avoid",
        "tabWidth": 4
    },
    "lint-staged": {
        "*.{html,md,css,less,json,yml,js,ts,tsx}": "prettier --write",
        "*.{js,ts,tsx}": "eslint --fix"
    },
    "postcss": {
        "modules": true,
        "plugins": {
            "autoprefixer": {
                "grid": true
            }
        }
    },
    "scripts": {
        "prepare": "husky install",
        "test": "lint-staged",
        "start": "parcel src/index.html --open",
        "pack-dist": "parcel build src/index.html --public-url .",
        "pack-sw": "rm -f dist/sw.js.map  &&  workbox generateSW",
        "build": "rm -rf dist/  &&  npm run pack-dist  &&  npm run pack-sw"
    }
}
