{
    "name": "@kaiyuanshe/pwa",
    "version": "0.8.0",
    "description": "PWA of KaiYuanShe",
    "keywords": [
        "web-component",
        "typescript",
        "jsx",
        "web-cell"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/kaiyuanshe/PWA.git"
    },
    "bugs": {
        "url": "https://github.com/kaiyuanshe/PWA/issues"
    },
    "main": "src/index.html",
    "dependencies": {
        "@nuintun/qrcode": "^3.0.1",
        "array-unique-proposal": "^0.3.1",
        "boot-cell": "^1.9.1",
        "browser-unhandled-rejection": "^1.0.2",
        "cell-router": "^2.0.3",
        "classnames": "^2.2.6",
        "lodash.debounce": "^4.0.8",
        "marked": "^1.2.7",
        "mobx": "^5.15.7",
        "mobx-strapi": "^0.2.3",
        "mobx-web-cell": "^0.3.4",
        "web-cell": "^2.3.0-beta.4",
        "web-utility": "^2.2.2"
    },
    "devDependencies": {
        "@types/classnames": "^2.2.11",
        "@types/lodash.debounce": "^4.0.6",
        "@types/marked": "^1.2.1",
        "@typescript-eslint/parser": "^4.11.0",
        "autoprefixer": "^9.8.6",
        "eslint": "^7.16.0",
        "eslint-config-prettier": "^7.1.0",
        "eslint-plugin-prettier": "^3.3.0",
        "husky": "^4.3.6",
        "less": "^4.0.0",
        "lint-staged": "^10.5.3",
        "parcel-bundler": "^1.12.4",
        "postcss-modules": "^3.2.2",
        "prettier": "^2.2.1",
        "typescript": "^4.1.3",
        "workbox-cli": "^6.0.2"
    },
    "prettier": {
        "singleQuote": true,
        "trailingComma": "none",
        "arrowParens": "avoid",
        "tabWidth": 4
    },
    "lint-staged": {
        "*.{html,md,css,less,json,yml}": "prettier --write",
        "*.{js,ts,tsx}": [
            "prettier --write",
            "eslint --fix"
        ]
    },
    "postcss": {
        "modules": true,
        "plugins": {
            "autoprefixer": {
                "grid": true
            }
        }
    },
    "scripts": {
        "test": "lint-staged",
        "start": "parcel src/index.html --open",
        "pack-dist": "parcel build src/index.html --public-url .",
        "pack-sw": "rm -f dist/sw.js.map  &&  workbox generateSW",
        "build": "rm -rf dist/  &&  npm run pack-dist  &&  npm run pack-sw"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm test",
            "pre-push": "npm run build"
        }
    }
}
